<h1>Listing hosts</h1>

<table>
  <thead>
    <tr>
      <th>Hostname</th>
      <th>Description</th>
      <th>Ip</th>
      <th>Cpu</th>
      <th>Mem</th>
      <th>Storage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hosts.each do |host| %>
      <tr>
        <td><%= host.hostname %></td>
        <td><%= host.description %></td>
        <td><%= host.ip %></td>
        <td><%= host.cpu %></td>
        <td><%= host.mem %></td>
        <td><%= host.storage %></td>
        <td><%= link_to 'Show', host %></td>
        <td><%= link_to 'Edit', edit_host_path(host) %></td>
        <td><%= link_to 'Destroy', host, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Host', new_host_path %>
